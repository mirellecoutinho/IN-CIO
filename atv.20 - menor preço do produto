#include <stdio.h>

int main(void) {

float p1,p2,p3;

printf("Digite o preço do primeiro produto :\n");
scanf("%f", &p1);

printf("Digite o preço do segundo produto :\n");
scanf("%f", &p2);

printf("Digite o preço do terceiro produto:\n");
scanf("%f", &p3);


if (p1<p2 && p1<p3)
printf("Comprar o primeiro produto: R$ %0.2f\n", p1);

else if (p2<p1 && p2<p1)
printf("Comprar o segundo produto: R$ %0.2f\n", p2);

else
printf("Comprar o terceiro produto: R$ %0.2f\n", p3);
  
  return 0;
}
